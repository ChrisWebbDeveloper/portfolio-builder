@model PortfolioBuilder.Models.About

@{
    ViewData["Title"] = "Edit - About";
}

<div class="page-container">
    <partial name="_NavigationPartial" />

    <form asp-action="Edit">
        <div class="row">
            <div class="col-md-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <input asp-for="Title" class="form-control-h1" placeholder="About" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 mb-4 col-md-8 about-description">
                <div class="form-group">
                    <textarea asp-for="Description" class="form-control" rows="30"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <partial name="Config Boxes/Photo/_PhotoConfigPartial" />
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}