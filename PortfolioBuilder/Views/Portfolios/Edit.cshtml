@model PortfolioBuilder.Models.Portfolio

@{
    ViewData["Title"] = Model.Name + " - Edit";
}

<form asp-action="Edit">
    <div class="page-container">
        <partial name="_NavigationPartial" />

        <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />
        <input type="hidden" asp-for="Id" />

        <partial name="Config Boxes/_PortfolioDetailsConfigPartial" />
    </div>

    <partial name="Config Boxes/Photo/_PhotoConfigPartial" />

    <div class="page-container">
        <partial name="Config Boxes/_PortfolioCustomHtmlConfigPartial" />

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary submit-button" />
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
