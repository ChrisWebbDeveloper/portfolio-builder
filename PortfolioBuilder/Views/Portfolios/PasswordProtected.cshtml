@model PortfolioBuilder.Models.Portfolio

@{
    ViewData["Title"] = "Password Protected";
}

<div class="page-container">
    <partial name="_NavigationPartial" />

    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-12">
            <form asp-action="PasswordProtected">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UnencryptedPassword" class="control-label"></label>
                    <input asp-for="UnencryptedPassword" class="form-control" type="password" />
                    <span asp-validation-for="UnencryptedPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Let me in" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

