@model PortfolioBuilder.Models.Category

<div class="row">
    <div class="col-12 col-md-5">
        <dl class="row">
            <dt class="col-6">
                @Html.DisplayNameFor(model => model.Published)
            </dt>
            <dd class="col-6">
                <span class="float-right">@Html.DisplayFor(model => model.Published)</span>
            </dd>
        </dl>
    </div>
    <div class="col-12 col-md-6 offset-md-1">
        @if (!String.IsNullOrEmpty(Model.FeaturedPhotoId.ToString()))
        {
            <div class="row">
                <strong class="col-12 col-md-6">
                    @Html.DisplayNameFor(model => model.FeaturedPhotoId)
                </strong>
                <div class="col-12 col-md-6">
                    <img src="~/images/@Model.FeaturedPhoto.FilePath" alt="@Model.FeaturedPhoto.FilePath" title="@Model.FeaturedPhoto.Name" class="featured-photo-display" />
                </div>
            </div>
        }
        else
        {
            <div class="row">
                <strong class="col-6">
                    @Html.DisplayNameFor(model => model.FeaturedPhotoId)
                </strong>
                <div class="col-6">
                    <span class="float-right">None</span>
                </div>
            </div>
        }
    </div>
</div>

<hr />