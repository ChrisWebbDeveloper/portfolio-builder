@model PortfolioBuilder.Models.Photo

<div class="modal fade photo-modal" id="photo-modal-@Model.Id" tabindex="-1" role="dialog" aria-labelledby="photo-modal-@Model.Id" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @if (!String.IsNullOrEmpty(Model.Name) || !String.IsNullOrEmpty(Model.Description))
                    {
                        <div class="col-12 col-lg-8 modal-photo-display-box">
                            <img src="~/images/@Model.FilePath" alt="@Model.FilePath" title="@Model.Name" class="modal-photo-display" id="modal-photo-@Model.Id" />
                        </div>
                        <div class="col-12 col-lg-4 modal-info-box">
                            <div class="modal-info">
                                @if (!String.IsNullOrEmpty(Model.Name))
                                {
                                    <h4>@Model.Name</h4>
                                }

                                @if (!String.IsNullOrEmpty(Model.Name) && !String.IsNullOrEmpty(Model.Description))
                                {
                                    <hr />
                                }

                                @if (!String.IsNullOrEmpty(Model.Description))
                                {
                                    <p class="multiline">@Model.Description</p>
                                }

                                @if (User.Identity.IsAuthenticated)
                                {
                                    <div class="photo-nav-btns">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-outline-primary" asp-controller="Photos" asp-action="Details" asp-route-Id="@Model.Id">Details</a>
                                            <a class="btn btn-outline-primary" asp-controller="Photos" asp-action="Edit" asp-route-Id="@Model.Id">Edit</a>
                                            <a class="btn btn-outline-danger" asp-controller="Photos" asp-action="Delete" asp-route-Id="@Model.Id">Delete</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col-12">
                            <img src="~/images/@Model.FilePath" alt="@Model.FilePath" title="@Model.Name" class="modal-photo-display" id="modal-photo-@Model.Id" />
                        </div>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="col-12 photo-nav-btns">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-outline-primary" asp-controller="Photos" asp-action="Details" asp-route-Id="@Model.Id">Details</a>
                                    <a class="btn btn-outline-primary" asp-controller="Photos" asp-action="Edit" asp-route-Id="@Model.Id">Edit</a>
                                    <a class="btn btn-outline-danger" asp-controller="Photos" asp-action="Delete" asp-route-Id="@Model.Id">Delete</a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="btn-prev-box">
        <button type="button" class="btn btn-outline-light btn-prev">
            <i class="fas fa-chevron-left"></i>
        </button>
    </div>
    <div class="btn-next-box">
        <button type="button" class="btn btn-outline-light btn-next">
            <i class="fas fa-chevron-right"></i>
        </button>
    </div>
</div>
